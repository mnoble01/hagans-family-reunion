{{#each flashMessages.queue as |flash|}}
  {{log flash}}
  {{#flash-message
    flash=flash
    local-class=(concat 'flash-message ' flash.type)
    as |component flash|
  }}
    <div local-class='message'>{{flash.message}}</div>
  {{/flash-message}}
{{/each}}
