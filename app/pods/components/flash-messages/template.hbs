{{#each flashMessages.queue as |flash|}}
  {{#if (eq flash.scope scope)}}
    {{#flash-message
      flash=flash
      local-class=(concat 'flash-message ' flash.type ' ')
      class=flashClass
      as |component flash|
    }}
      <div local-class='message'>{{flash.message}}</div>
    {{/flash-message}}
  {{/if}}
{{/each}}
